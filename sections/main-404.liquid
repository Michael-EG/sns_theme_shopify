<style type="text/css">
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <a href="{{ routes.all_products_collection_url }}" class="button">
    {{ 'general.continue_shopping' | t }}
  </a>
</div>
{% comment %} <script>console.log({{ link | json }});console.log('hi');</script>
<ul class="mega-menu__list page-width">
    <li>
      <a href="/new" class="mega-menu__link mega-menu__link--level-2 link{% if link.current == '/new' %} mega-menu__link--active{% endif %}"{% if block.button_link.current %} aria-current="page"{% endif %}>
        <p>Temp Text</p>
      </a>
    </li>
</ul> {% endcomment %}

