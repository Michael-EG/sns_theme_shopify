{%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'icon_text_button' -%}
        <div class="announcement-bar color-{{ block.settings.color_scheme }} gradient" role="region">
          {%- if block.settings.button_text != blank -%}
            {%- if block.settings.button_link != blank -%}
              <a href="{{ block.settings.button_link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
            {%- endif -%}
                <p class="announcement-bar__message h5">
                  {{ block.settings.button_text | escape }}
                  {%- if block.settings.button_link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
            {%- if block.settings.button_link != blank -%}
              </a>
            {%- endif -%}
          {%- endif -%}
        </div>
    {%- endcase -%}
{%- endfor -%}
  
{% schema %}
{
  "name": "Beauty Icons Bar",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "icon_text_button",
      "name": "Icon Text Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "default": "Click Me!",
          "label": "Button Text"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.all.colors.accent_1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.all.colors.accent_2.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.all.colors.background_1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.all.colors.background_2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.all.colors.inverse.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
      {
        "name": "custom-icons-bar",
        "category": "Custom"
      }
  ]
}
{% endschema %}

  